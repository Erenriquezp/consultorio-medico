<?xml version="1.0" encoding="UTF-8"?>

<!-- Define la versión XML y la codificación utilizada -->
<!-- Importa clases necesarias para el diseño de la interfaz -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Define un VBox como contenedor principal con propiedades específicas -->
<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" styleClass="main-vbox">

   <!-- Define un VBOx HIJO como contenedor secundario de label Inicia sesion -->
   <children>
      <VBox prefHeight="380.0" prefWidth="397.0" HBox.hgrow="ALWAYS">
         <!--defino margenes opacos -->
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <!--Define el margen de 10 pixeles por todos los lados-->
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <!-- Define un label de "inicio de sesion"-->
         <children>
            <Label alignment="CENTER" prefHeight="190.0" prefWidth="413.0" text="INICIAR SESIÓN" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <!-- Define VBox hijo, que va a contener lo siguiente....-->
            <VBox prefHeight="114.0" prefWidth="337.0" VBox.vgrow="ALWAYS">
               <children>
                  <!--Label de ingresa usuario -->
                  <Label text="INGRESA TU USUARIO" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <!--con un margen -->
                        <Insets />
                     </VBox.margin></Label>
                  <!--Define un TextField para ingresar el usuario del cliente -->
                  <TextField fx:id="userField" VBox.vgrow="ALWAYS">
                     <!--Con su margen -->
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></TextField>
                  <!--Define un TextField para ingresar la contrasenia -->
                  <Label text="INGRESA TU CONTRASEÑA" VBox.vgrow="ALWAYS" />
                  <TextField fx:id="passwordField" VBox.vgrow="ALWAYS">
                     <!--margen 10 -->
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></TextField>
                  <!--Declaramos un Hbox hijo para poner los siguiente botone:  -->
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <!--button login -->
                        <Button mnemonicParsing="false" text="LOGIN ">
                           <!--margen 10 -->
                           <HBox.margin>
                              <Insets left="30.0" top="10.0" />
                           </HBox.margin>

                        </Button>
                        <!--button cerrar app -->
                        <Button mnemonicParsing="false" text="CERRAR APP">
                           <!--margen-->
                           <HBox.margin>
                              <Insets left="30.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
      <!--Creo un Vbox alado derecho con un fondo azul y con el texto "CONSULTORIO MEDICO" -->
      <VBox prefHeight="380.0" prefWidth="333.0" style="-fx-background-color: #22CBCE;" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="200.0" text="CONSULTORIO MEDICO " textFill="#0815cd">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <!--informacion del consultorio -->
            <Label prefHeight="190.0" prefWidth="334.0" text="MAS INFORMACION 099999999999" />
         </children>
      </VBox>
   </children>
</HBox>
