<?xml version="1.0" encoding="UTF-8"?>

<!-- Importa clases necesarias para el diseño de la interfaz -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="611.0" prefWidth="651.0" spacing="10" style="-fx-background-color: #E0F7FA;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uce.app.controllers.GestionRecetasController">
   <!-- Define el padding (espacio interno) del VBox -->
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>

   <!-- Título de la sección -->
   <Label style="-fx-border-color: #1a237e;" text=">> HISTORIA CLINICA<<" textFill="#1a237e">
      <font>
         <Font name="Yu Gothic Light" size="22.0" />
      </font>
   </Label>

   <!-- Sección de formulario para ingresar datos -->
   <ScrollPane prefHeight="301.0" prefWidth="595.0">
      <content>
         <AnchorPane maxHeight="1000.0" maxWidth="596.0" minHeight="10.0" minWidth="10.0" prefHeight="471.0" prefWidth="596.0">
            <children>
               <!-- Primer HBox: Identificadores y datos básicos -->
               <HBox layoutX="14.0" layoutY="14.0" prefHeight="44.0" prefWidth="644.0">
                  <children>
                     <TextField promptText="ID_Historia Clinica">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Cedula Medico">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Cedula Paciente">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Apellido Paterno">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Apellido Materno">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                  </children>
               </HBox>

               <!-- Segunda VBox: Antecedentes y revisión -->
               <VBox layoutX="14.0" layoutY="58.0" prefHeight="153.0" prefWidth="636.0">
                  <children>
                     <TextField promptText="Motivo de Consulta" />
                     <TextField promptText="Antecedentes Personales" />
                     <TextField promptText="Antecedentes Familiares" />
                     <TextField promptText="Revision Organos de los Sentidos" />
                  </children>
               </VBox>

               <!-- Menú de selección de sistemas revisados -->
               <VBox layoutX="14.0" layoutY="214.0" prefHeight="35.0" prefWidth="606.0">
                  <children>
                     <MenuButton mnemonicParsing="false" text="Revision">
                        <items>
                           <MenuItem mnemonicParsing="false" text="Organos de los Sentidos" />
                           <MenuItem mnemonicParsing="false" text="Sistema Respiratorio" />
                           <MenuItem mnemonicParsing="false" text="Sistema Cardiovascular" />
                           <MenuItem mnemonicParsing="false" text="Sistema Digestivo" />
                           <MenuItem mnemonicParsing="false" text="Organos Genitales" />
                           <MenuItem mnemonicParsing="false" text="Sistema Urinario" />
                           <MenuItem mnemonicParsing="false" text="Musculos Esqueletico" />
                           <MenuItem mnemonicParsing="false" text="Sistema Endocrino" />
                           <MenuItem mnemonicParsing="false" text="Sistema Hemo Linfatico" />
                           <MenuItem mnemonicParsing="false" text="Sistema Nervioso" />
                        </items>
                     </MenuButton>
                  </children>
               </VBox>

               <!-- Medición de signos vitales -->
               <HBox layoutX="14.0" layoutY="258.0" prefHeight="40.0" prefWidth="654.0">
                  <children>
                     <TextField promptText="Fecha de Medicion" prefHeight="31.0" prefWidth="130.0">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Temperatura">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Presion Arterial">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Pulso/min Fre. Resp">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                     <TextField promptText="Peso/kg/Talla/cm">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </TextField>
                  </children>
               </HBox>

               <!-- Examen físico y diagnóstico -->
               <VBox layoutX="14.0" layoutY="317.0" prefHeight="93.0" prefWidth="606.0">
                  <children>
                     <MenuButton mnemonicParsing="false" text="Examen Fisico">
                        <items>
                           <MenuItem mnemonicParsing="false" text="Cabeza" />
                           <MenuItem mnemonicParsing="false" text="Cuello" />
                           <MenuItem mnemonicParsing="false" text="Torax" />
                           <MenuItem mnemonicParsing="false" text="Abdomen" />
                           <MenuItem mnemonicParsing="false" text="Pelvis" />
                           <MenuItem mnemonicParsing="false" text="Extremidades" />
                        </items>
                     </MenuButton>
                     <TextField promptText="Diagnostico Descripcion">
                        <VBox.margin>
                           <Insets top="10.0" />
                        </VBox.margin>
                     </TextField>
                     <TextField promptText="Diagnostico CIE">
                        <VBox.margin>
                           <Insets bottom="20.0" top="5.0" />
                        </VBox.margin>
                     </TextField>
                  </children>
               </VBox>
            </children>
         </AnchorPane>
      </content>
   </ScrollPane>

   <!-- Botones para acciones sobre el historial clínico -->
   <HBox prefHeight="37.0" prefWidth="630.0">
      <children>
         <Button fx:id="buttonAddHClinic" onAction="#agregarHistoriaClinica" prefWidth="100.0" text="Agregar">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>
         <Button fx:id="buttonUpdateHistoriC" onAction="#actualizarHistoria" prefHeight="25.0" prefWidth="100.0" text="Actualizar" HBox.hgrow="ALWAYS">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>
         <Button fx:id="buttonDelateHistoriC" onAction="#eliminarHistoria" prefWidth="100.0" text="Eliminar" HBox.hgrow="ALWAYS">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>
      </children>
   </HBox>

   <!-- Tabla para mostrar el historial médico -->
   <TableView fx:id="tablaHistorial" prefHeight="169.0" prefWidth="659.0">
      <columns>
         <TableColumn text="ID" />
         <TableColumn text="Fecha" />
         <TableColumn text="Diagnóstico" />
         <TableColumn text="Tratamiento" />
         <TableColumn text="ID Paciente" />
      </columns>
   </TableView>

   <!-- Mensaje de pie de página -->
   <HBox prefHeight="20.0" prefWidth="631.0">
      <children>
         <Label alignment="TOP_LEFT" prefHeight="25.0" prefWidth="304.0" style="-fx-underline: true;" text="&quot;Salud y bienestar en cada consulta.&quot;" HBox.hgrow="ALWAYS">
            <font>
               <Font name="Symbol" size="19.0" />
            </font>
            <HBox.margin>
               <Insets left="320.0" />
            </HBox.margin>
         </Label>
      </children>
   </HBox>
</VBox>
