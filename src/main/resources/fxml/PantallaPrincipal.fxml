<?xml version="1.0" encoding="UTF-8"?>

<!-- Define la versión XML y la codificación utilizada -->
<!-- Importa clases necesarias para el diseño de la interfaz -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<!-- Para manejar el espacio interno (padding) de los elementos -->
<!-- Para usar el elemento Button -->
<!-- Para usar el layout VBox -->
<!-- Define un VBox como contenedor principal con propiedades específicas -->

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" spacing="100" styleClass="main-vbox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="org.uce.app.controllers.PantallaPrincipalController">
    <!-- xmlns:fx define el espacio de nombres para FXML -->
    <!-- fx:controller especifica el controlador asociado a esta vista -->
    <!-- spacing define el espacio entre los elementos del VBox -->
    <!-- alignment alinea los elementos en el centro -->
    <!-- styleClass aplica una clase de estilo CSS -->

    <!-- Define el padding (espacio interno) del VBox -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" /> <!-- Establece 20 píxeles de padding en cada lado -->
    </padding>

    <!-- Botón para gestionar pacientes -->
    <Button onAction="#gestionarPacientes" styleClass="menu-button" text="Gestión de Pacientes" />
    <!-- text define el texto que aparece en el botón -->
    <!-- onAction especifica el método en el controlador que se llama al hacer clic en el botón -->
    <!-- styleClass aplica una clase de estilo CSS -->

    <!-- Botón para gestionar citas -->
    <Button onAction="#gestionarCitas" styleClass="menu-button" text="Gestión de Citas" />
    <!-- Igual que el botón anterior, pero para gestionar citas -->

    <!-- Botón para gestionar el historial médico -->
    <Button onAction="#gestionarHistorialMedico" styleClass="menu-button" text="Historial Médico" />
    <!-- Igual que los botones anteriores, pero para gestionar el historial médico -->

</VBox>
